{% if config.piwikServerHTTPS and config.piwikServerHTTP and config.piwikSiteID %}
<!-- Piwik -->
<script type="text/javascript"> 
  var _paq = _paq || [];
{% if currentSite is defined and currentSite is not null %} _paq.push(['setCustomVariable', 1, 'CurrentSiteID', '{{ currentSite.id }}', 'page']);  
{% endif %}
{% if currentUser is defined and currentUser is not null %} _paq.push(['setCustomVariable', 2, 'CurrentUserID', '{{ currentUser.id }}', 'page']); 
{% endif %}
{% if area is defined and area is not null %} _paq.push(['setCustomVariable', 2, 'area', '{{ area.slugForURL }}', 'page']); 
{% endif %}
  _paq.push(['trackPageView']);
  _paq.push(['setDocumentTitle', document.domain + "/" + document.title]);
  _paq.push(['setCookieDomain', '*.{{ config.webCommonSessionDomain  }}']);
  _paq.push(['setDomains', '*.{{ config.webCommonSessionDomain  }}']);
  (function() {
    var u=(("https:" == document.location.protocol) ? "https://{{ config.piwikServerHTTPS }}/" : "http://{{ config.piwikServerHTTP }}/") ;
    _paq.push(['setTrackerUrl', u+'piwik.php']);
    _paq.push(['setSiteId', {{ config.piwikSiteID }}]);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0]; g.type='text/javascript';
    g.defer=true; g.async=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
  })();

</script>
<noscript><p><img src="https://{{ config.piwikServerHTTPS }}/piwik.php?idsite={{ config.piwikSiteID }}" style="border:0" alt="" /></p></noscript>
<!-- End Piwik Code -->
{% endif %}


{% if config.googleAnalyticsTracking %}
<script type="text/javascript">

var _gaq = _gaq || [];
_gaq.push(['_setAccount', '{{ config.googleAnalyticsTracking  }}']);
_gaq.push(['_trackPageview']);

(function() {
	var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
})();

</script>
{% endif %}

