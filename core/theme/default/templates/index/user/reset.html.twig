{% extends 'index/page.html.twig' %}

{% block pageTitle %}Reset your password - {% endblock %} 

{% block content %}

	<div class="contentMain">

		<form action="#" method="post" class="styled">

			{{ form_errors(form) }}

			<div class="rowWrapper">
				<div class="labelWrapper">Name</div>
				<div class="widgetWrapperPlacementOnly">{{ user.displayname }}</div>
				<div class="after"></div>
			</div>

			<div class="rowWrapper">
				<div class="labelWrapper">Email</div>
				<div class="widgetWrapperPlacementOnly">{{ user.email }}</div>
				<div class="after"></div>
			</div>

			{{ form_row(form.password1) }}
			{{ form_row(form.password2) }}

			{{ form_rest(form) }}

			<div class="bigSubmitActionWrapper"><input type="submit"  value="Reset" class="bigSubmitAction"/></div>
			<div class="afterBigSubmitActionWrapper"></div>
		</form>

	</div>

{% endblock %}
