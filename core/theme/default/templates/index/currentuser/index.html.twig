{% extends 'index/page2col.html.twig' %}

{% block pageTitle %}You - {% endblock %} 

{% block breadcrumbs %}
	<li class="current"><a href="/me/">your account</a></li>
{% endblock %}


{% block contentLeft %}

	<p>Welcome.</p>

{% endblock %}
	
{% set currentUserPrivateFeedKey = getCurrentUserPrivateFeedKey() %}

{% block contentRight %}

	<ul class="actionList">
		<li><a href="/me/notification"><img src="/theme/default/img/actionNotificationIcon.png">Notifications</a></li>
		<li class="header">Your Personal Calendar</li>
		<li><a href="/me/agenda"><img src="/theme/default/img/actionCalendarIcon.png">Agenda</a></li>
		<li><a href="/me/calendar"><img src="/theme/default/img/actionCalendarIcon.png">Calendar</a></li>
		<li>
			<a href="/api1/person/{{ currentUser.username }}/private/{{ currentUserPrivateFeedKey.accessKey }}/events.aw.ical" onclick="showExportPopup(); return false;">
				<img src="/theme/default/img/actionExportLargeIcon.png">Export
			</a>
		</li>
		<li class="header">Your account</li>
		{% if not config.isSingleSiteMode %}
			<li><a href="/me/sites"><img src="/theme/default/img/actionCalendarIcon.png">Calendars</a></li>
		{% endif %}
		<li><a href="/me/password"><img src="/theme/default/img/actionChangePasswordIcon.png">Change Password</a></li>
		<li><a href="/me/emails"><img src="/theme/default/img/actionEmailIcon.png">Emails we send you</a></li>
		<li><a href="/me/prefs"><img src="/theme/default/img/actionPrefsIcon.png">Preferences</a></li>
		<li><a href="/person/{{ currentUser.username }}"><img src="/theme/default/img/actionUserIcon.png">View your public profile</a></li>
	</ul>

{% endblock %}

{% block scriptsForState %}
	<script type="text/javascript">var exportData = {user:'{{ currentUser.username }}', userAccessKey: '{{ currentUserPrivateFeedKey.accessKey }}'}</script>
{% endblock %}


