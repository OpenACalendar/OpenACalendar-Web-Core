{% extends 'index/page.html.twig' %}

{% block pageTitle %}Welcome - {% endblock %}

{% block htmlHeader %}
	<link rel="canonical" href="{{ config.getWebIndexDomainSecure }}/" />
{% endblock %}
 
	
{% block content %}

	<div class="contentTwoColumns">

		<div class="contentTwoColumnsLeft">

			<p>Welcome {{ currentUser.username }}.</p>

		</div>

		<div class="contentTwoColumnsRight">

			<ul class="sites">
				{% for site in sites %}
					<li class="site">
						<a href="{{ config.getWebSiteDomainSecure(site.slug) }}" class="title">
							<span class="logoWrapper"><img src="{{ config.getWebSiteDomainSecure(site.slug) }}/getLogo.php?v={{ site.logoCacheKey }}" alt="logo"></span>
							<span class="titleWrapper">{{ site.title }}</span>
						</a>
						<a href="{{ config.getWebSiteDomainSecure(site.slug) }}" class="link">
							View
						</a>
					</li>
				{% endfor %}
				{% if config.siteSlugDemoSite %}
					<li class="site">
						<a href="{{ config.getWebSiteDomainSecure(config.siteSlugDemoSite) }}" class="title">
							<span class="logoWrapper"><img src="{{ config.getWebSiteDomainSecure(config.siteSlugDemoSite) }}/getLogo.php" alt="logo"></span>
							<span class="titleWrapper">Try the demo!</span>
						</a>
						<a href="{{ config.getWebSiteDomainSecure(config.siteSlugDemoSite) }}" class="link">
							View the demo and try editing a calendar
						</a>
					</li>
				{% endif %}
				<li class="site">
					<a href="/create" class="title">
						<span class="logoWrapper"><img src="/theme/default/img/logo.png?v={{ config.assetsVersion }}" alt="logo"></span>
						<span class="titleWrapper">Create?</span>
					</a>
					<a href="/create" class="link">
						Create your own calendar
					</a>
				</li>
			</ul>

		</div>

		<div class="afterContentTwoColumns"></div>

	</div>

{% endblock %}
