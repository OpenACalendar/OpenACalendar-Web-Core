{% extends 'index/page.html.twig' %}



{% block content %}

	<div class="contentMain">
		<h2>About {{  user.username }}</h2>
	</div>

	<div class="pageActionsWrapper">
		<ul class="pageActions">
			{% block actions %}{% endblock %}
			<li class="action">
				<a href="/api1/person/{{ user.username }}/events.ical" onclick="showExportPopup(); return false;">
					<div class="fa fa-download"></div> export
				</a>
			</li>				
			<li class="tab {% block tabIndex %}currentTab{% endblock %}"><a href="/person/{{ user.username }}">Upcoming events</a></li>
		</ul>
	</div>

	{% block innerContent %}{% endblock %}

{% endblock %}



{% block scriptsForState %}
	<script type="text/javascript">var exportData = {user:'{{ user.username }}'}</script>
{% endblock %}

