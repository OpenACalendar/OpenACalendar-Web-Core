{% extends 'site/page.html.twig' %}


{% block pageTitle %}Events - {% endblock %} 


{% block htmlHeader %}
	<link rel="canonical" href="{{ config.getWebSiteDomainSecure(currentSite.slug) }}/event/" />
	{% if not currentSite.isWebRobotsAllowed %}<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">{% endif %}
{% endblock %}

{% block breadcrumbs %}
	{%  include 'site/breadcrumbs.html.twig' with { 'breadcrumbs': [  { 'url':'/event', 'label':'events' } ]  } %}
{% endblock %}


{% block content %}

	<h2>Events</h2>

	<div id="innerPageWrapper">
		<ul id="innerPageActions">
			{% if currentUserActions.has("org.openacalendar","eventNew") or ( currentUser is null and anyVerifiedUserActions.has("org.openacalendar","eventNew") ) %}
				<li class="action">
					<a href="/event/new"><div class="fa fa-pencil"></div> Add an event</a>
				</li>
			{% endif %}
			{# lists link is needed: if we have user who can't use menus for some reason, this is their way to find that page  #}
			{% if currentSiteFeatures.has('org.openacalendar.curatedlists','CuratedList') %}
				<li class="action"><a href="/curatedlist"><div class="fa fa-list"></div> Lists</a></li>
			{% endif %}	
			{# tags link is needed: if we have user who can't use menus for some reason, this is their way to find that page  #}
			{% if currentSiteFeatures.has('org.openacalendar','Tag') %}
				<li class="action"><a href="/tag"><div class="fa fa-tags"></div> Tags</a></li>
			{% endif %}
			{# imports link is needed: if we have user who can't use menus for some reason, this is their way to find that page  #}
			{% if currentSiteFeatures.has('org.openacalendar','Importer') %}
				<li class="action"><a href="/import"><div class="fa fa-cloud-download"></div> Imports</a></li>
			{% endif %}
			<li class="action">
				<a href="/api1/events.ical" onclick="showExportSharePopup(); return false;">
					{%  include '/site/common/actionExportShareLabel.html.twig' %}
				</a>
			</li>
			<li class="tab currentTab"><a href="/event">Agenda</a></li>
			<li class="tab"><a href="/event/calendar">Calendar</a></li>
		</ul>
		<div id="innerPage">

			{% include '/site/eventListFilterParams.html.twig' %}

			<ul class="mainListEvents">
				{% for event in events %}
					{% include '/site/common/mainListEvent.html.twig' with {'event':event, 'showCurrentUserOptions':true, 'showVenueAndArea':true}  %}
				{% else %}
					<li class="nodata">
						<p>
							{%  if not eventListFilterParams.isDefaultFilters %}
								{%  set eventsDefaultCount = null|futureeventscount %}
								{%  if eventsDefaultCount == 1 %}
									No events found with that filter. Do you want to see <a href="/event">the one future event</a> instead?
								{%  elseif eventsDefaultCount > 1 %}
									No events found with that filter. Do you want to see <a href="/event">the {{ eventsDefaultCount }} future events</a> instead?
								{%  else %}
									No events found.
								{%  endif %}
							{%  else  %}
								No events found.
							{%  endif %}
						</p>

						{%  if eventListFilterParams.isDefaultFilters %}
							{%  set eventsPastCount = null|pasteventscount %}
							{%  if eventsPastCount == 1 %}
								<p>(Sorry, you've already missed 1 event here.)</p>
							{% elseif eventsPastCount > 1 %}
								<p>(Sorry, you've already missed {{ eventsPastCount  }} events here.)</p>
							{%  endif %}
						{%  endif %}
						{% if currentUserActions.has("org.openacalendar","eventNew") %}<p>Why not <a href="/event/new">add one</a>?</p>{% endif %}
					</li>					
				{% endfor %}
			</ul>

			<div id="afterInnerPageContent"></div>
		</div>
	</div>

	

{% endblock %}


{% block scriptsForState %}
	<script type="text/javascript">var exportData = {}</script>
{% endblock %}


{% block scripts %}
	<script src="/theme/default/js/eventFilterParams.js?v={{ config.assetsVersion }}" type="text/javascript"></script>
	<script type="text/javascript" src="/theme/default/js/userAtEvents.site.js?v={{ config.assetsVersion }}"></script>
{% endblock %}
	
