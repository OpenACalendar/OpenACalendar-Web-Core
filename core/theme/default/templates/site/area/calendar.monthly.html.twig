{% extends 'site/area/page.mainTab.html.twig' %}


{% block pageTitle %}{{ area.title }} - {% endblock %}

{% block tabDetails %}currentTab{% endblock %}

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{{ parent() }}
{% endblock %}

{% block switcherCalendar %}current{% endblock %}

{% block eventsContent %}

	{%  include '/site/common/calendar.monthly.html.twig' with {'showCurrentUserOptions':true, 'addURL':'/event/new', 'calURL':'/area/' ~ area.slugForURL ~ '/calendar' } %}

{% endblock %}

{% block scripts %}
	{{ parent() }}
	<script type="text/javascript">
		var showCurrentUserOptions = {% if currentUser is not null %}true{% else %}false{% endif %};
	</script>
	<script src="/theme/default/js/calendar.site.js?v={{ config.assetsVersion }}" type="text/javascript"></script>
{% endblock %}

