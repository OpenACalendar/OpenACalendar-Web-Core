{% extends 'site/area/page.html.twig' %}

{% block pageTitle %}Edit {{ area.title }} - {% endblock %}


{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{% include 'site/common/mapLibrary.css.html.twig' %}
	{{ parent() }}
{% endblock %}


{% block innerContent %}

	<div id="Map" style="width: 100%; height: 400px;"></div>


	<form method="post" onsubmit="return onFormSubmit();">
		<input type="hidden" name="CSFRToken" value="{{ getCSFRToken() }}">
		<input type="hidden" name="action" value="edit">
		<input type="hidden" name="minLat">
		<input type="hidden" name="minLng">
		<input type="hidden" name="maxLat">
		<input type="hidden" name="maxLng">

		<div class="bigSubmitActionWrapper"><input type="submit"  value="Save" class="bigSubmitAction"/></div>
		<div class="afterBigSubmitActionWrapper"></div>

	</form>

{% endblock %}


{% block scripts %}
	{% include 'site/common/mapLibrary.js.html.twig' %}
	<script src="/theme/default/js/areaedit.bounds.js?v={{ config.assetsVersion }}" type="text/javascript"></script>
{% endblock %}


