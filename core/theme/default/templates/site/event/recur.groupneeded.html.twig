{% extends 'site/event/page.html.twig' %}

{% block pageTitle %}Recur {{ event.summaryDisplay }} - {% endblock %} 

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{{ parent() }}
{% endblock %}


{% block actions %}
{% endblock %}


{% block innerContent %}

	<div class="contentMain">

		<p>Before you can make this event an recurring one, you must add it to a group.</p>

		<form id="GroupSearchForm" method="POST">
			<input type="hidden" name="CSFRToken" value="{{ getCSFRToken() }}">

			Group title: <input name="NewGroupTitle" type="text" id="GroupSearchText" value="{{ event.summary }}">

			<div class="bigButtonContainer">
				<input type="submit" value="Create New Group" class="button">
			</div>
		</form>

		<ul class="mainListGroups" id="GroupSearchList">
		</ul>

	</div>

{% endblock %}



{% block scripts %}
	<script type="text/javascript">
		var eventSlug = {{ event.slug }};
	</script>
	<script type="text/javascript" src="/theme/default/js/recur.groupneeded.js"></script>
{% endblock %}

