{% extends 'site/venuevirtual/page.html.twig' %}

{% block pageTitle %}Virtual - {% endblock %} 


{% block htmlHeader %}
	{% if not currentSite.isWebRobotsAllowed or not eventListFilterParams.isDefaultFilters  %}
		<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
	{%  else %}
		<link rel="canonical" href="{{ config.getWebSiteDomainSecure(currentSite.slug) }}/venue/virtual/" />
	{% endif %}
	{% include 'site/common/mapLibrary.css.html.twig' %}
	{{ parent() }}
{% endblock %}

{% block actions %}
{% endblock %}

{% block tabDetails %}currentTab{% endblock %}
		
{% block innerContent %}
		
	<p>This lists events that happen online and can be accessed from any place.</p>

	{% include '/site/eventListFilterParams.html.twig' %}

	<ul class="mainListEvents">
		{% for event in events %}
			{% include '/site/common/mainListEvent.html.twig' with {'event':event, 'showCurrentUserOptions':true}  %}
		{% else %}
			<li class="nodata">
				No events found.
			</li>		
		{% endfor %}
	</ul>

{% endblock %}


{% block scripts %}
	<script src="/theme/default/js/eventFilterParams.js?v={{ config.assetsVersion }}" type="text/javascript"></script>
	<script type="text/javascript" src="/theme/default/js/userAtEvents.site.js?v={{ config.assetsVersion }}"></script>
{% endblock %}




