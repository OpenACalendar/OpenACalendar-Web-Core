{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Venue {{ venue.title }} - {% endblock %}

{% block content %}


	<table class="oneData">
		<tr>
			<th>ID</th>
			<td>{{ venue.id }}</td>
		</tr>
		<tr>
			<th>Slug</th>
			<td>{{ venue.slug }}</td>
		</tr>
		<tr>
			<th>Human Slug</th>
			<td>{{ venue.slugHuman }}</td>
		</tr>
		<tr>
			<th>Deleted</th>
			<td>{% if venue.isDeleted %}Deleted{% else %}-{% endif %}</td>
		</tr>
		<tr>
			<th>Is Duplicate of</th>
			<td>{% if venue.isDuplicateOfId %}<a href="/sysadmin/site/{{ site.id }}/venue/{{ venueisduplicateof.slug }}/">{{ venueisduplicateof.title }}</a>{% else %}-{% endif %}</td>
		</tr>
		<tr>
			<th>Title</th>
			<td>{{ venue.title }}</td>
		</tr>
		<tr>
			<th>Description</th>
			<td>{{ venue.description | nl2br }}</td>
		</tr>	
		<tr>
			<th>Address</th>
			<td>{{ venue.address | nl2br }}</td>
		</tr>	
		<tr>
			<th>Address Code</th>
			<td>{{ venue.addressCode }}</td>
		</tr>	
		<tr>
			<th>Position</th>
			<td>{{ venue.lat }},{{ venue.lng }}</td>
		</tr>
		<tr>
			<th>More</th>
			<td>
				<ul>
					<li><a href="{{  config.getWebSiteDomainSecure(site.slug) }}/venue/{{ venue.slug }}" target="_blank">View On Site</a></li>
				</ul>
			</td>
		</tr>
	</table>


	{%  include 'sysadmin/common/sysadminCommentsList.html.twig' %}

	<form action="#" method="post" class="action">
		{{ form_errors(form) }}
		{{ form_rest(form) }}
		<input type="submit" name="Do Action" />
	</form>

	<ul class="actionHelp">
		<li>delete</li>
		<li>undelete</li>
		<li>isduplicateof <span class="param">SLUG</span></li>
		<li>purge <span class="param">password</span></li>
		<li>slughuman  <span class="param">slughuman</a></li>
	</ul>
{% endblock %}

