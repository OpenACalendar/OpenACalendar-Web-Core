{% extends 'sysadmin/page.html.twig' %}

{% block pageTitle %}Group {{  group.title }} Watchers - {% endblock %}

{% block content %}

	<table class="data">
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>Email</th>
		</tr>
		{% for user in watchers %}
			<tr {% if loop.index is even %}class="alternative"{% endif %}>
				<td><a href="/sysadmin/user/{{ user.id }}">{{ user.id }}</a></td>
				<td><a href="/sysadmin/user/{{ user.id }}">{{ user.username }}</a></td>
				<td>{{ user.email }}</td>
			</tr>
		{% endfor %}
	</table>

	{%  include 'sysadmin/common/sysadminCommentsList.html.twig' %}

	<form action="#" method="post" class="action">
		{{ form_errors(form) }}
		{{ form_rest(form) }}
		<input type="submit" name="Do Action" />
	</form>

	<ul class="actionHelp">
		<li>add <span class="param">email</span></li>
		<li>addevenifstoppedbefore <span class="param">email</span></li>
		<li>remove <span class="param">email</span></li>
	</ul>

{% endblock %}
