{% extends 'site/page2col.html.twig' %}

{% block pageTitle %}You - {% endblock %} 

{% block breadcrumbs %}
	{% if not config.isSingleSiteMode %}<li><a href="/">{{ currentSite.title }}</a></li>{% endif %}
	<li class="current"><a href="/currentuser">Your details</a></li>
{% endblock %}

{% block contentLeft %}
	Let's talk about you.
{% endblock %}


{% block contentRight %}

	<ul class="actionList">
		
		{% if currentSite.cachedIsMultipleTimezones %}
			<li><a href="/mytimezone"><img src="/img/actionPlacesIcon.png">Timezone: {{ currentTimeZone }}</a></li>
		{% endif %}
				
		<li id="userWatchesSite">
			{% if currentUserWatchesSite %}
				<a href="/watch/"><img src="/img/actionWatchingIcon.png">Watching!</a>
			{% else %}
				<a href="/watch/"><img src="/img/actionWatchingIcon.png">Watch?</a>
			{% endif %}
		</li>
		<li><a href="{{ config.getWebIndexDomainSecure() }}/me/"><img src="/img/actionUserIcon.png">Your account</a></li>
		{% if currentUserCanAdminSite %}
			<li><a href="/admin"><img src="/img/actionCalendarFeaturesIcon.png">Calendar Admin</a></li>
		{% endif %}
		<li><a href="{{ config.getWebIndexDomainSecure() }}/me/logout"><img src="/img/actionUserIcon.png">Logout</a></li>
		
		
	</ul>

{% endblock %}

